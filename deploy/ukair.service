[Unit]
Description="uWSGI instance to serve UKAIR app"
After=network.target

[Service]
User=ukair
Group=www-data
RuntimeDirectory=ukair
WorkingDirectory=/srv/www/asselect.uk/ukair
Environment="UKAIR_SETTINGS=/srv/www/asselect.uk/ukair/deploy.cfg"
ExecStart=/srv/www/asselect.uk/ukair/venv/bin/uwsgi --ini uwsgi.ini --virtualenv=/srv/www/asselect.uk/ukair/venv

[Install]
WantedBy=multi-user.target
